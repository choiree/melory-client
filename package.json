{
  "name": "melory",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@reduxjs/toolkit": "^1.8.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "aws-sdk": "^2.1083.0",
    "axios": "^0.26.0",
    "d3": "^7.3.0",
    "face-api.js": "^0.22.2",
    "http-proxy-middleware": "^2.0.3",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "react-spotify-web-playback": "^0.9.1",
    "styled-components": "^5.3.3",
    "util": "^0.12.4"
  },
  "main": "public/electron.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run react:start\" \"npm run electron:start\"",
    "react:start": "react-scripts start",
    "build": "react-scripts build",
    "electron:build": "npm run build && electron-builder --publish=never",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:start": "wait-on https://gracious-euclid-c4ba43.netlify.app && electron .",
    "electron-pack": "npm run electron:build && electron-builder build -c.extraMetadata.main=build/electron.js",
    "deploy:xos": "electron-builder --mac",
    "prepare": "husky install"
  },
  "build": {
    "productName": "Melory",
    "mac": {
      "icon": "./public/images/icon.icns"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^17.1.2",
    "electron-builder": "^22.14.13",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.28.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.3",
    "redux-logger": "^3.0.6",
    "wait-on": "^6.0.1"
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix"
  }
}
